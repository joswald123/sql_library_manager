extends layout

block content
  h2 Books
  p
    a(href="/books/new", class="button") Create New Book 
  
table
  thead 
    tr
      th Title 
      th Author
      th Genre
      th Year 

  tbody

    each book in books
      tr
        td 
          a(href="book_detail")= book.title 
        td= book.author
        td= book.genre
        td= book.year  
    